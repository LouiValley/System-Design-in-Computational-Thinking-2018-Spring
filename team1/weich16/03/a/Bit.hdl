/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    Mux(a=out1,b=in,sel=load,out=out2);
    DFF(in=out2,out=out1);
    And(a=out1,b=true,out=out);
}
