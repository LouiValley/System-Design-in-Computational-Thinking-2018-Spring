/**
 * 8-way 16-bit multiplexor:
 * out = a if sel == 000
 *       b if sel == 001
 *       etc.
 *       h if sel == 111
 */

CHIP Mux8Way16 {
    IN a[16], b[16], c[16], d[16],
       e[16], f[16], g[16], h[16],
       sel[3];
    OUT out[16];

    PARTS:
    Mux16(a=a,b=b,sel=sel[0],out=choice1);  
    Mux16(a=c,b=d,sel=sel[0],out=choice2);  
    Mux16(a=e,b=f,sel=sel[0],out=choice3);  
    Mux16(a=g,b=h,sel=sel[0],out=choice4);  
    Mux16(a=choice1,b=choice2,sel=sel[1],out=choice11);  
    Mux16(a=choice3,b=choice4,sel=sel[1],out=choice22);  
    Mux16(a=choice11,b=choice22,sel=sel[2],out=out); 
}